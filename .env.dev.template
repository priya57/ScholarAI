# Development Environment Variables
# Copy this file to .env.dev and update values

# Required
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
ENVIRONMENT=development
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# LLM Configuration
LLM_MODEL=gpt-3.5-turbo
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=2000

# Database (Development uses SQLite by default)
DATABASE_URL=sqlite:///./scholarai.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Vector Database (ChromaDB for development)
CHROMA_HOST=localhost
CHROMA_PORT=8001
VECTOR_DB_TYPE=chromadb

# File Storage (Local for development)
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=50MB

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./logs/scholarai.log

# Development Database (PostgreSQL - Optional)
DB_USER=dev_user
DB_PASSWORD=dev_pass
DB_NAME=scholarai_dev
DB_HOST=localhost
DB_PORT=5432