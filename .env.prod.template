# Production Environment Variables
# Copy this file to .env.prod and update values

# Required
OPENAI_API_KEY=your_production_openai_api_key_here

# Application Settings
ENVIRONMENT=production
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
WORKERS=4

# LLM Configuration
LLM_MODEL=gpt-3.5-turbo
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=2000

# PostgreSQL Database
DB_USER=scholarai_prod
DB_PASSWORD=your_secure_db_password_here
DB_NAME=scholarai
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis
REDIS_URL=redis://redis-master:6379/0
REDIS_PASSWORD=your_redis_password_here

# Vector Database (Qdrant)
VECTOR_DB_TYPE=qdrant
VECTOR_DB_URL=http://qdrant:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# MinIO (S3-compatible storage)
MINIO_USER=scholarai_admin
MINIO_PASSWORD=your_secure_minio_password_here
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=scholarai-documents

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password_here
PROMETHEUS_RETENTION=30d

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Storage
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,docx,txt,pptx

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/scholarai.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Performance
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Backup
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=scholarai-backups