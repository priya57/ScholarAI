# Local Development Environment (No Docker)

# Optional - Only needed for AI features
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
ENVIRONMENT=local
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=true

# Local Database
DATABASE_URL=sqlite:///data/vector_db/local.db
VECTOR_DB_PATH=data/vector_db/local.db

# Document Processing
CHUNK_SIZE=500
CHUNK_OVERLAP=50
MAX_FILE_SIZE=50MB

# File Storage
UPLOAD_DIR=data/uploads
ALLOWED_FILE_TYPES=txt,md,py,js,html,css,json

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/scholarai.log